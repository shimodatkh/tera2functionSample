<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">

<!-- モジュール固有のBean定義 -->
<!-- フォワードモジュールのBean定義 -->

  <!-- AOPの設定 -->
  <aop:config>
    <aop:pointcut id="actionBeans"  expression="bean(/forward/*)"/>
    <aop:pointcut id="serviceBeans" expression="bean(*Service)"/>
    <aop:pointcut id="blogicBeans"  expression="bean(*BLogic)"/>
    <aop:advisor 
         pointcut-ref="actionBeans" 
         advice-ref="debugInterceptor"/>
    <aop:advisor 
         pointcut-ref="serviceBeans" 
         advice-ref="debugInterceptor"/>
    <aop:advisor 
         pointcut-ref="blogicBeans" 
         advice-ref="debugInterceptor"/>
  </aop:config>

  
  
  <!-- フォワードメニュー画面 -->
  <bean name="/forward/forwardForward" scope="prototype"
        class="jp.terasoluna.fw.web.struts.actions.ForwardAction" />

  <!-- フォワード結果画面 -->
  <bean name="/forward/forwardResultForward" scope="prototype"
        class="jp.terasoluna.fw.web.struts.actions.ForwardAction" />

  <!-- フォワード：リダイレクト -->
  <bean name="/forward/forwardRedirectForward" scope="prototype"
        class="jp.terasoluna.fw.web.struts.actions.ForwardAction" />

  <!-- フォワード：リダイレクト用アクション -->
  <!--
  <bean name="/forward/forwardRedirect" scope="prototype"
        class="jp.functionsample.forward.web.action.ForwardRedirectAction">
  -->
  <bean name="/forward/forwardRedirect" scope="prototype"
        class="jp.terasoluna.fw.web.struts.actions.ForwardAction">
  </bean>

  <!-- フォワード：エラー -->
  <bean name="/forward/forwardError" scope="prototype"
        class="jp.terasoluna.fw.web.struts.actions.ForwardAction" />
</beans>