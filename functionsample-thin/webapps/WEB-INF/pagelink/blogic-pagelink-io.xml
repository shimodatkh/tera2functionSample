<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE blogic-io PUBLIC "-//NTTDATA//DTD TERASOLUNA for Spring blogic-io 1.0//JA"
                           "../dtd/blogic-io.dtd">

<blogic-io>

   <action path="/listLink">
     <blogic-params bean-name="java.util.HashMap">
       <set-property property="startIndex1" source="form" />
       <set-property property="row1"        source="form" />
       <set-property property="startIndex2" source="form" />
       <set-property property="row2"        source="form" />       
     </blogic-params>
     <blogic-result>
       <set-property property="userBeans1"  dest="request" />
       <set-property property="totalCount1" dest="form" />
       <set-property property="startIndex1" dest="form" />
       <set-property property="userBeans2"  dest="request" />
       <set-property property="totalCount2" dest="form" />
       <set-property property="startIndex2" dest="form" />
     </blogic-result>
   </action>
   
   <action path="/listLink1">
     <blogic-params bean-name="java.util.HashMap">
       <set-property property="startIndex1" source="form" />
       <set-property property="row1"        source="form" />
       <set-property property="startIndex2" source="form" />
       <set-property property="row2"        source="form" />
     </blogic-params>
     <blogic-result>
       <set-property property="userBeans1"  dest="request" />
       <set-property property="totalCount1" dest="form" />
       <set-property property="userBeans2"  dest="request" />
       <set-property property="totalCount2" dest="form" />
     </blogic-result>
   </action>
   
   <action path="/listLink2">
     <blogic-params bean-name="java.util.HashMap">
       <set-property property="startIndex1" source="form" />
       <set-property property="row1"        source="form" />
       <set-property property="startIndex2" source="form" />
       <set-property property="row2"        source="form" />
     </blogic-params>
     <blogic-result>
       <set-property property="userBeans1"  dest="request" />
       <set-property property="totalCount1" dest="form" />
       <set-property property="userBeans2"  dest="request" />
       <set-property property="totalCount2" dest="form" />
     </blogic-result>
   </action>

   <action path="/listSubmit">
     <blogic-params bean-name="java.util.HashMap">
       <set-property property="startIndex" source="form" />
       <set-property property="row"        source="form" />
     </blogic-params>
     <blogic-result>
       <set-property property="userBeans3"  dest="request" />
       <set-property property="totalCount" dest="form" />
     </blogic-result>
   </action>
      
</blogic-io>