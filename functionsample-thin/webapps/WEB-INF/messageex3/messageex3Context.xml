  <!-- AOPの設定 -->
  <aop:config>
    <aop:pointcut id="actionBeans"  expression="bean(/messageex3/*)"/>
    <aop:pointcut id="serviceBeans" expression="bean(*Service)"/>
    <aop:pointcut id="blogicBeans"  expression="bean(*BLogic)"/>
    <aop:advisor
         pointcut-ref="actionBeans"
         advice-ref="debugInterceptor"/>
    <aop:advisor
         pointcut-ref="serviceBeans"
         advice-ref="debugInterceptor"/>
    <aop:advisor
         pointcut-ref="blogicBeans"
         advice-ref="debugInterceptor"/>
  </aop:config>


  <!-- 国際化対応メッセージリソース -->
  <bean name="/messageex3/springMessageResourceForward" scope="prototype"
        class="jp.terasoluna.fw.web.struts.actions.ForwardAction" />

  <!-- 優先順位メッセージ -->
  <bean name="/messageex3/springMessageResource" scope="prototype"
        class="jp.terasoluna.thin.functionsample.messageex3.web.action.SpringMessageResourceAction">
  </bean>

</beans>