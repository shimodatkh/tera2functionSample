<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE blogic-io PUBLIC "-//NTTDATA//DTD TERASOLUNA for Spring blogic-io 1.0//JA"
                           "../dtd/blogic-io.dtd">

<blogic-io>
  <!-- システム例外 -->
  <action path="/exception">
    <blogic-params bean-name="jp.terasoluna.thin.functionsample.exception.bean.ExceptionParam" >
      <set-property property="forward_exception" blogic-property="forward_exception" source="form" />
    </blogic-params>
    
    <blogic-result>
    </blogic-result>
  </action>
  <action path="/systemException">
    <blogic-params bean-name="jp.terasoluna.thin.functionsample.exception.bean.ExceptionParam" >
      <set-property property="forward_systemException" blogic-property="forward_systemException" source="form" />
    </blogic-params>
    
    <blogic-result>
    </blogic-result>
  </action>

</blogic-io>